@{
    // Dummy user data
    var userName = "McKay";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildsByBrickwellNew</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildsByBrickwellNew.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }

        .navbar-custom, .footer-custom {
            background-color: #00c3fc;
            color: #ffffff;
            font-family: 'Montserrat', sans-serif;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link,
            .navbar-custom .navbar-toggler-icon,
            .footer-custom a {
                color: #ffffff;
            }

            .navbar-custom .navbar-brand {
                padding-left: 30px;
            }

        .navbar-custom {
            min-height: 80px !important;
        }

        .welcome-text {
            font-size: 4rem;
        }

        .login-btn {
            font-size: 1.5rem;
            margin-right: 20px;
        }

        .menu-icon img {
            height: 100px;
        }

        .menu-icon-container {
            padding-right: 30px;
        }

        .image-wrapper {
            width: 100%;
            height: 300px;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-img-top {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .rating .fa-star {
            color: #gray;
        }

            .rating .fa-star.checked {
                color: #ffc107;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/img/bw_logo.jpg" alt="BW Logo" style="height: 110px;">
                </a>
                <div class="navbar-nav mx-auto">
                    @if (ViewContext.RouteData.Values["Action"].ToString() == "Login")
                    {
                        <h1 class="welcome-text">Login</h1>
                    }
                    else if (ViewContext.RouteData.Values["Action"].ToString() != "Index")
                    {
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="What are you looking for?" aria-label="Search">
                            <button class="btn btn-outline-light" type="submit">Search</button>
                        </form>
                    }
                    else
                    {
                        <h1 class="welcome-text">Welcome, @userName!</h1>
                    }
                </div>
                @if (ViewContext.RouteData.Values["Action"].ToString() != "Login")
                {
                    <div class="d-flex align-items-center">
                        <vc:cart-summary />
                        <a class="btn login-btn text-white" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        <div class="dropdown menu-icon-container">
                            <a class="menu-icon text-white" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bars"></i>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Products">Products</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="HyrumCart">HyrumCart</a></li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminUsers">Admin Users</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminProducts">Admin Products</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ProductForm"> Product Form</a>
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 footer-custom">
        <div class="container text-center">
            &copy; 2024 Builds By Brickwell. All rights reserved. <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
